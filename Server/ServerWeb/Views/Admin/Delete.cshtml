@model ServerWeb.Engine.Database.IDUser

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="chat-background h-100 w-100">
    <div class="p-5">
        <div class="card m-5">
           
            <div class="m-5">
                <h2>Delete</h2>

                <h3>Are you sure you want to delete this?</h3>
                <hr />
                <dl class="dl-horizontal">
                    <dd>
                        <div class="d-flex bd-highlight btn">
                            <div class="img_cont">
                                <img identicon-value="@Model.UserName" class="rounded-circle user_img" width="60" height="60" alt="Identicon" />
                                <span class="online_icon"></span>
                            </div>
                            <div class="user_info align-self-center">
                                <span>@Model.FullName</span>
                            </div>
                        </div>
                    </dd>

                    <dd class="ml-5">
                        @Html.DisplayFor(model => model.UserName)
                        @Html.DisplayNameFor(model => model.UserName)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index">Back to List</a>
                </form>
            </div>

        </div>
    </div>
</div>